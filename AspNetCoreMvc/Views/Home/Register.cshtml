@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <link href="/myStylesheet.css" rel="stylesheet" />
    <style>
        .maindiv {
            position: relative;
            width: 100%;
            height: 87vh;
            overflow: hidden;
        }

        body {
            height: 100%;
        }

        .maindiv::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url("/login.jpg");
            background-size: cover;
            background-position: center;
            filter: blur(7px);
        }

        .content {
            position: relative;
            z-index: 9999;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        p {
            font-family: SpaceAgecy;
            color: black;
            align-content: center;
            opacity: 1;
        }

        * {
            box-sizing: border-box;
        }

            *:focus {
                outline: none;
            }



        .login {
            margin: 20px auto;
            width: 300px;
        }

        .login-screen {
            background-color: #FFF;
            padding: 20px;
            border-radius: 5px
        }

        .app-title {
            text-align: center;
            color: #777;
        }

        .login-form {
            text-align: center;
        }

        .control-group {
            margin-bottom: 10px;
        }

        input {
            text-align: center;
            background-color: #ECF0F1;
            border: 2px solid transparent;
            border-radius: 3px;
            font-size: 16px;
            font-weight: 200;
            padding: 10px 0;
            width: 250px;
            transition: border .5s;
            font-family: SpaceAgecy;
        }


        
        .btn {
            border: 2px solid transparent;
            background: #616161;
            color: #ffffff;
            font-size: 16px;
            line-height: 25px;
            padding: 10px 0;
            text-decoration: none;
            text-shadow: none;
            border-radius: 3px;
            box-shadow: none;
            transition: 0.25s;
            display: block;
            width: 250px;
            margin: 0 auto;
            font-family: SpaceAgecy;
            
        }

            .btn:hover {
                background-color: #424242;
                border-color: black;
            }

        input[type="text"] {
            font-family: SpaceAgecy;
        }

        input[type="date"] {
            font-family: SpaceAgecy;
        }

        .login-link {
            font-size: 12px;
            color: #444;
            display: block;
            margin-top: 12px;
        }

        h3 {
            font-family: SpaceAgecy;
        }

        .datepicker{
            font-family: SpaceAgecy;
        }

        .alert{
            margin:10px;
            width:15%;
            float: right;
        }

        
        
    </style>
</head>
<body>
    <div class="maindiv">
        <div class="alert alert-success" role="alert" id="alert" hidden>
            Регистрация прошла успешно!
        </div>
        <div class="content">
            <div class="login">
                <div class="login-screen">
                    <div class="app-title">
                        <h3>Регистрация</h3>
                    </div>

                    <div class="login-form">
                        <div class="control-group">
                            <input type="text" class="login-field" value="" placeholder="Имя пользователя" id="login">
                            <label class="login-field-icon fui-user" for="login-name"></label>
                        </div>

                        <div class="control-group">
                            <input type="password" class="login-field" value="" placeholder="Пароль" id="password">
                            <label class="login-field-icon fui-lock" for="login-pass"></label>
                        </div>
                        <div class="control-group">
                            <input type="text" class="name-field" value="" placeholder="Имя" id="name">
                            <label class="login-field-icon fui-user" for="login-name"></label>
                        </div>
                        <div class="control-group">
                            <input type="text" class="surnama-field" value="" placeholder="Фамилия" id="surname">
                            <label class="login-field-icon fui-user" for="login-name"></label>
                        </div>
                        <div class="control-group">
                            <input type="date" class="datepicker" value="" placeholder="Желаемая дата вылета" id="date">
                            <label class="login-field-icon fui-user" for="login-name"></label>
                        </div>
                        <div>
                            <table>
                                <tr>
                                    <th style="width:min-content" >
                                        <input style ="width:min-content; margin: 2%" type="checkbox" id="checkbox">
                                    </th>
                                    <th>
                                        <p style="font-size: 0.5vw;text-align: justify; margin: 2%">Нажимая кнопку "Присоединиться" Вы даёте свое согласие на обработку введенной персональной информации в соответствии с Федеральным Законом №152-ФЗ от 27.07.2006 "О персональных данных"</p>

                                    </th>
                                </tr>
                                
                            </table>

                        </div>
                        <a class="btn btn-primary btn-large btn-block" href="#" id="createAcount"><p>Присоединиться</p></a>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    var key = true;
    function showAlert(){
        document.getElementById("alert").hidden = false; 
    }
    function redirect(){
        localStorage.setItem('name', document.getElementById("name").value);
        localStorage.setItem('surname', document.getElementById("surname").value);
        localStorage.setItem('isInAccount', true);
        window.location.href = '/Home/Main'

    }
      async function isLoginOccupied() {
          if (isObjectFine()) { 
         axios.post('/Mongo/IsLoginOccypided',
            getObject()
        )
         .then(function (response) {
                 console.log(response);
                if (response.data == true) {
                    alert('Логин занят')
                    key = true;
                } else {
                    key = false;
                }

            })
          }
            
    } 
    function getObject(){
        return {
             login:  document.getElementById("login").value,
             password:  document.getElementById("password").value,
             name:  document.getElementById("name").value,
             surname:  document.getElementById("surname").value,
             data:  document.getElementById("date").value,
             id:  "id" + Math.random().toString(16).slice(2),
        }
    }
    function isObjectFine() {
        var obj = getObject()
        if (obj.login == "" ||
            obj.password == "" ||
            obj.name == "" ||
            obj.surname == "" ||
            obj.data == "" ||
            !document.getElementById("checkbox").checked
        ) {
                alert("Закончите заполнение всех полей")
            return false;
        }
            else{
                return true
            }
            
    }
   async function getData(){
        await isLoginOccupied()
        if (!key && isObjectFine()) {
          
        axios.post('/Mongo/Create', 
            getObject()
        )
            .then(function (response) {
                console.log(response);
                if (response.status == '200') {
                    showAlert();
                    setTimeout(
                        redirect
                    , 1200);
                }

            })
            .catch(function (error) {
                console.log(error);
            });
        }

    }

    document.getElementById("createAcount").onclick = getData;

</script>
