@{
    Layout = "_Layout";
}
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />

<!DOCTYPE html>
<html>
<head>
    <link href="/myStylesheet.css" rel="stylesheet" />
    <style>
        .maindiv {
            position: relative;
            width: 100%;
            height: 150vh;
            overflow: hidden;
        }

            .maindiv::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-image: url("/rovers.png");
                background-size: cover;
                background-position: center;
                filter: blur(7px);
            }

        .content {
            margin-top: 10%;
            position: relative;
            z-index: 9999;
            width: 100%;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
     
        }

        .card {
            width: 80%;
            text-align: center;
            height: fit-content;
            background-color: white;
            transition: transform 0.3s ease-in-out;
            border-radius: 3em;
            margin-bottom: 5em;
            margin-top: 3em;
            padding-bottom: 1%;
            margin-top: 5em;
            opacity: 0.7;
            align-content: center;
        }

        p {
            font-family: SpaceAgecy;
            color: black;
            align-content: center;
            opacity: 1;
       
        }

        .lotText {
            text-align: justify;
            font-size: 0.85vw;
        }

        row {
            height: max-content;
        }

        table {
            width: 100%;
        }

        tr {
            display: flex;
            flex-wrap: wrap;
        }

        th {
            flex: 1;
            text-align: center;
        }

        .imgMain {
            width: 65%;
            height: auto;
            max-width: 100%; /* чтобы избежать растягивания изображения */
            margin: auto; /* центрирование изображения в ячейке */
            margin: 2%;
            border-radius: 5%;
            opacity: 1;
        }

  

        btn:active {
            height: 50%;
            width: 50%
        }
        th {
            width: max-content;
            align-content: center;
            font-family: SpaceAgecy;
        }
        td{
            width: 33.3%;
            font-family: SpaceAgecy;
        }

        
    </style>
</head>
