
@{
    Layout = "_Layout";
}
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />

<!DOCTYPE html>
<html>
<head>
    <link href="/myStylesheet.css" rel="stylesheet" />
    <style>
        .maindiv {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: hidden;
        }

            .maindiv::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-image: url("/rovers.png");
                background-size: cover;
                background-position: center;
                filter: blur(7px);
            }

        .content {
            margin-top: 10%;
            position: relative;
            z-index: 9999;
            width: 100%;
            height: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .card {
            width: 50%;
            text-align: center;
            height: min-content;
            background-color: white;
            transition: transform 0.3s ease-in-out;
            border-radius: 3em;
            margin-bottom: 5em;
            padding-bottom: 1%;
            opacity: 0.7;
            align-content: center;
        }

        p {
            font-family: SpaceAgecy;
            color: black;
            align-content: center;
            opacity: 1;
        }
        row{
            height:max-content;
        }
        .imgNasa{
            width: 50%;
            height: 25%;
            border-radius: 3em;
        }
        btn:active{
            height:50%;
            width:50%
        }
       

    </style>
</head>
<body>
    <div class="maindiv">
        <div class="content">
            <div class="card">
                <table>
               <row>
                    <p>Фотографии ваших будущих соседей!</p>

               </row>
                <row>
                        <img class="cardContent imgNasa" id="photoes" alt="Фото ровера из API" src="" style="opacity: 1"></img>

                </row>
                <row>

                        <button type="button" class="btn btn-outline-secondary" style="margin-top: 1%" id="next">Следующая</button>

                </row>
                </table>
            </div>
           
        </div>
        <div style="height: 2em; width: 100%"></div>
    </div>
</body>
</html>
<script>
    function getPhotoes() {
        var image = document.getElementById("photoes");

        axios({
            method: 'get',
            url: '/Home/getMarsPhoto',
            responseType: 'stream'
        })
            .then(function (response) {
                console.log(response.data)
                image.src = response.data;
            });

    }
    document.getElementById("next").onclick = getPhotoes;
   getPhotoes();
</script>

